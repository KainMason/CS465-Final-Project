<section><h1>Available Trips</h1>{{#if trips.length}}<ul class='trip-grid'>{{#each trips}}<li class='trip-card'><img src='{{this.image}}' alt='{{this.name}}'/><div class='trip-content'><h2><a href='/trips/{{this.slug}}'>{{this.name}}</a></h2><p class='meta'>{{this.location}} • {{this.duration}} days • ${{this.price}}</p><p>{{this.summary}}</p><a class='btn btn-small' href='/trips/{{this.slug}}'>View details</a></div></li>{{/each}}</ul>{{else}}<p>No trips found.</p>{{/if}}</section>